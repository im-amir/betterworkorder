<% include ../partials/header %>
<section style="height: 40em; margin: 10em -5em 0 27em;">
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <form class="text-center border border-light p-5" action="/register" method="POST">
                <p class="h2 mb-3">Sign Up</p>
                <input class="form-control mb-4" type="text" name="username" placeholder="Username">
                <input class="form-control mb-4" type="password" name="password" placeholder="Password">
                <button class="btn btn-dark form-control mb-4" type="submit" class="btn btn-dark" id="submit">Register</button>
                <p class="text-muted">Already a User?<a style="margin-left: 0.6em" href="/login">Sign In</a></p>
            </form>
        </div>
    </div>
</div>
</section>
